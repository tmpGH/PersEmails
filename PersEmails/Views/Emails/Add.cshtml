@using PersEmails.ViewModels.Emails;
@model EmailDataViewModel
@{
    ViewData["Title"] = "Add email";
}

<h2>Add new email for @Html.DisplayFor(model => model.PersonName) @Html.DisplayFor(model => model.PersonSurname)</h2>

<form asp-controller="Emails" method="post">

    <input type="hidden" asp-for="PersonId" /><br />

    <label asp-for="EmailAddress">Enter your email address:</label>
    <input class="form-control" type="email" asp-for="EmailAddress" size="50" maxlength="50" />
    <span asp-validation-for="EmailAddress" style="color: red;"></span>
    <br />

    <button class="btn btn-secondary" type="submit" formaction="SaveEmail"> Save email </button>
    <button class="btn btn-outline-secondary" type="button" onclick="history.back()"> Cancel </button>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial.cshtml" />
}
