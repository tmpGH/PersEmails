@using PersEmails.Application.Persons;
@{
    ViewData["Title"] = "List of persons";
}
@model IList<PersonWithEmailAddressDto>

<h2>Persons</h2>

<table>
    <tr style="background-color:lightgray">
        <th> surname </th>
        <th> /&nbsp;first&nbsp;name </th>
        <th> /&nbsp;email </th>
        <th> /&nbsp;description </th>

        <th> </th>
        <th> </th>
        <th> </th>
    </tr>

    @foreach (var item in Model) {
        <tr>
            <td style="background-color:whitesmoke"> @Html.DisplayFor(i => item.Surname) </td>
            <td style="background-color:whitesmoke"> @Html.DisplayFor(i => item.Name) </td>
            <td> @Html.DisplayFor(i => item.EmailAddress) </td>
            <td style="background-color:whitesmoke"> @Html.DisplayFor(i => item.Description) </td>

            <td> <a asp-action="Person" asp-route-id="@item.Id">Details</a>&nbsp;| </td>
            <td> <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>&nbsp;| </td>
            <td> <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> </td>
        </tr>
    }
</table>

<br />
<div style="width:100px; background-color:lightgray; text-align:center">
    <a asp-controller="Persons" asp-action="Add">Add person</a>
</div>
